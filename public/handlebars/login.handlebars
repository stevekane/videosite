<section class="container page-section">
  <div class="row">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">

        <form class="form-horizontal" role="form">
          <legend>Login</legend>
          <div class="form-group">
            <label for="username">Username</label>
            {{input type="text" class="form-control" placeholder="Your Username" value= username}}
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            {{input type="password" class="form-control" placeholder="Password" value= password}}
          </div>

          <div class="form-group">
            <button class="btn btn-success" {{action updateAccountInfo}}>Login!</button>
          </div>
        </form> 

      </div>
    </div>
  </div>
</section>
