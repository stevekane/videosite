            <div style = "display:inline"> Name: {{name}} <br> id: {{id}} </div>
          {{/list}}
        </div>


        <div class = "col-md-4">
          <h1>mongoDB users
            <button type = "button" class = "btn btn-primary">DELETE ALL</button>
          </h1>
          
          {{#list mongoUsers}}    
