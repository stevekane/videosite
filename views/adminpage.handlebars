           {{#list btIds}} 
            <button type = "button" class = "btn btn-xs btn-primary" id={{id}}>
              X
            </button> 
            
            id: {{id}} 
           {{/list}}
        </div>
        
      </div> 
    </div>
    
  <script type="text/javascript" src="/vendor/jquery/jquery.js"></script>
  <script type = "text/javascript">
    function cioDeleteAll(){
      $.ajax({
        url: "http://localhost:3000/admin/deleteAllCio", 
        type: "DELETE",
        success: function(res){
          console.log("CIO DELETED");
          
          //for some reason it doesn't work every time
          setTimeout(
          location.reload(), 500);
        },
        error: function(err){
          console.log(err);
          location.reload();
        }
      })
    };
  </script>
  </body>

</html>